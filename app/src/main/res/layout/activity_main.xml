<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    tools:context="com.example.khadijah.teamscore.MainActivity"
    android:background="#ebe5e5"
    android:clickable="false">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="الفريق الأول"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:textColor="#050505"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:layout_margin="16dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:textSize="60dp"
            android:textColor="#050505" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نقطة"
            android:id="@+id/button4"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:background="#f66d0c"
            android:onClick="display1a"
            android:textColor="#050505"

           />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نقطتين"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:id="@+id/button5"
            android:onClick="display2a"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:background="#f66d0c"
            android:textColor="#050505" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثلاث نقاط"
            android:layout_margin="16dp"
            android:id="@+id/button6"
            android:textColor="#050505"
            android:padding="8dp"
            android:layout_below="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:onClick="display3a"
            android:background="#f66d0c" />
    </LinearLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="#f66d0c">
    </View>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="الفريق الثاني"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textColor="#050505" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"

            android:layout_margin="16dp"
            android:id="@+id/textView4"
            android:textSize="60dp"
            android:textColor="#050505" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نقطة "
            android:id="@+id/button"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:background="#f66d0c"
            android:onClick="display1b"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نقطتين "
            android:onClick="display2b"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:background="#f66d0c" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثلاث نقاط"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:onClick="display3b"
            android:background="#f66d0c" />

    </LinearLayout>
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="reset"
        android:textSize="20dp"
        android:layout_margin="32dp"
        android:background="#f66d0c"
        android:id="@+id/buttonR"
        android:text="Reset"/>
</RelativeLayout>